<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content"
    android:orientation="vertical"
    android:background="@drawable/bg_main_groof_new">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <th.co.octagoninteractive.groof.util.CTextViewMed
            android:id="@+id/tv_title_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textColor="#292663"
            android:text="@string/title_menu_profile" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="53dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="12dp">

                <th.co.octagoninteractive.groof.util.CTextViewMedCond
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_name"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="18dp"/>

                <th.co.octagoninteractive.groof.util.CEditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textSize="23sp"
                    android:textColor="#000000"
                    android:paddingLeft="25dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:cursorVisible="false"
                    android:background="@drawable/bg_tv"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <th.co.octagoninteractive.groof.util.CTextViewMedCond
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_lastname"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="17dp"/>

                <th.co.octagoninteractive.groof.util.CEditText
                    android:id="@+id/edit_lastaname"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textSize="23sp"
                    android:textColor="#000000"
                    android:cursorVisible="false"
                    android:paddingLeft="25dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_tv"/>
            </LinearLayout>

        </LinearLayout>

        <th.co.octagoninteractive.groof.util.CTextViewMedCond
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_email"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="13dp"/>

        <th.co.octagoninteractive.groof.util.CEditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="23sp"
            android:textColor="#000000"
            android:cursorVisible="false"
            android:paddingLeft="25dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:background="@drawable/bg_tv"/>

        <th.co.octagoninteractive.groof.util.CTextViewMedCond
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_lineID"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="13dp"/>

        <th.co.octagoninteractive.groof.util.CEditText
            android:id="@+id/edit_lineID"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="23sp"
            android:textColor="#000000"
            android:paddingLeft="25dp"
            android:gravity="center_vertical"
            android:cursorVisible="false"
            android:singleLine="true"
            android:background="@drawable/bg_tv"/>

        <th.co.octagoninteractive.groof.util.CTextViewMedCond
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_phone"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="13dp"/>

        <th.co.octagoninteractive.groof.util.CEditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="23sp"
            android:textColor="#000000"
            android:paddingLeft="25dp"
            android:cursorVisible="false"
            android:inputType="number"
            android:gravity="center_vertical"
            android:background="@drawable/bg_tv"/>

        <th.co.octagoninteractive.groof.util.CButtonBold
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/bg_btn_submit"
            android:textSize="26sp"
            android:layout_marginTop="51dp"
            android:text="@string/btn_save"/>

        <th.co.octagoninteractive.groof.util.CTextViewMed
            android:id="@+id/tv_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16.3sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.01"
            android:text="@string/tv_change_password"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</LinearLayout>