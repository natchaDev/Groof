<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_groof_new">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <th.co.octagoninteractive.groof.util.CTextViewMed
            android:id="@+id/tv_title_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#292663"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/title_menu_setting" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_site"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="65dp">
            
            <ImageView
                android:layout_width="15dp"
                android:layout_height="22dp"
                android:background="@drawable/ic_checkin"/>

            <th.co.octagoninteractive.groof.util.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_change_site"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="12dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/iv_selected_site"
                    android:layout_width="12dp"
                    android:layout_height="17dp"
                    android:background="@drawable/ic_arrow_right" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_language"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="10dp">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/ic_world"/>

            <th.co.octagoninteractive.groof.util.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_change_lang"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <th.co.octagoninteractive.groof.util.CTextView
                    android:id="@+id/tv_thai_lang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_thai_lan"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginRight="14dp"/>

                <th.co.octagoninteractive.groof.util.CTextView
                    android:id="@+id/tv_eng_lang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_eng_lan"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
</RelativeLayout>