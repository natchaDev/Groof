<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content"
    android:orientation="vertical"
    android:background="@drawable/bg_main_groof_new">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <th.co.octagoninteractive.groof.util.CTextViewMed
            android:id="@+id/tv_title_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textColor="#292663"
            android:text="@string/title_menu_change_password" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="53dp">

        <th.co.octagoninteractive.groof.util.CTextViewMedCond
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_current_password"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="19dp"/>

        <th.co.octagoninteractive.groof.util.CEditText
            android:id="@+id/edit_current_pass"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:hint="**********"
            android:inputType="textPassword"
            android:textColorHint="#c9c9c9"
            android:maxLength="16"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/bg_tv"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"
            android:layout_marginTop="26dp"/>

        <th.co.octagoninteractive.groof.util.CTextViewMedCond
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_new_password"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="25dp"/>

        <th.co.octagoninteractive.groof.util.CEditText
            android:id="@+id/edit_new_pass"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:hint="**********"
            android:maxLength="16"
            android:textColorHint="#c9c9c9"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/bg_tv"/>
        <th.co.octagoninteractive.groof.util.CTextViewMedCond
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_confirm_password"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="19dp"/>

        <th.co.octagoninteractive.groof.util.CEditText
            android:id="@+id/edit_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:hint="**********"
            android:maxLength="16"
            android:inputType="textPassword"
            android:textColorHint="#c9c9c9"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/bg_tv"/>

        <th.co.octagoninteractive.groof.util.CButtonBold
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/bg_btn_submit"
            android:textSize="26sp"
            android:layout_marginTop="51dp"
            android:text="@string/btn_submit"/>

    </LinearLayout>






</LinearLayout>